<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>
    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_5sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_5sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="MyRounded.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CustomDialog.Rounded
        </item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CustomDialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="DialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallcorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="customRoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@null</item>
        <item name="closeIcon">@drawable/ic_cancel_red</item>
        <item name="goIcon">@drawable/ic_search</item>
        <item name="commitIcon">@drawable/ic_search</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColorHighlight">@color/black</item>
        <item name="queryBackground">@drawable/searchview_radius</item>
        <item name="searchHintIcon">@drawable/ic_search</item>
        <item name="queryHint">@string/search_here</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/appbg</item>
        <item name="colorAccent">@color/appcolor</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:background">@color/appbg</item>
        <item name="android:shadowColor">@color/appcolor</item>
    </style>

</resources>